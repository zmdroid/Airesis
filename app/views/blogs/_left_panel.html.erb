<div class="mybox">
  <h4><%='最近的评论'%></h4>
  <div class="mycont">
    <%@recent_comments.each do |comment| %>
        <div class="blog_comment">
          <div class="comment_avatar">
            <%= avatar(comment.user, size: 40) %>
          </div>
          <div class="comment_desc">
            <%=link_to_user comment.user, full_name: true%> on <%=link_to(h(comment.blog_post.title), [@blog, comment.blog_post])%>
          </div>
          <div class="clearboth"></div>
        </div>
    <%end%>
  </div>
</div>
<div class="mybox">
  <h4><%='最近的帖子'%></h4>
  <div class="mycont">
    <%@recent_posts.each do |post| %>
        <div class="blog_comment">
          <%=link_to(h(post.title), [@blog, post])%>
        </div>
    <%end%>
  </div>
</div>
<div class="mybox">
  <h4><%='存档'%></h4>
  <div class="mycont">
    <%@archives.each do |rec|%>
        <div class="blog_comment">
          <%=link_to "#{month_long(rec.month)} #{rec.year.to_i} (#{rec.posts})", posts_by_year_and_month_blog_path(@blog, month: rec.month.to_i, year: rec.year.to_i) %>
        </div>
    <%end%>
  </div>
</div>
