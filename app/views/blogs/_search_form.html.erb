<%= form_for blogs_path, method: 'get', remote: true do |f| %>
    <div class="row">
      <div class="columns">
        <%= f.label t('buttons.search'), t('pages.blogs.index.search_with_query') %>
      </div>
    </div>

    <div class="row">
      <div class="columns small-9">
        <%= text_field_tag :search, params[:search], title: t('pages.groups.index.find_title')%>
      </div>
      <div class="columns small-3">
        <div class="search_words">
          <%= check_box_tag :and, params[:and], title: "选择是否搜索所有词或至少一个" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="columns">
        <%= f.label :interest_border, t('pages.groups.index.search_with_place') %>
      </div>
    </div>
    <div class="row">
      <div class="columns small-9">
        <%= text_field_tag :interest_border, params[:interest_border],
                           title: t('pages.groups.index.find_title'),
                           data: {pre: ([@interest_border].to_json if @interest_border)} %>
      </div>
      <div class="columns small-3">
      </div>
    </div>
    <div class="row">
      <div class="columns">
        <%= f.button t('pages.blogs.index.find_button'), onclick: 'return checkCharacters();', class: 'btn', data: {disable_with: t('loading')} %>
      </div>
    </div>
<% end %>
